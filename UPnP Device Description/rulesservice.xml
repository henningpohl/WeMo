      <defaultValue></defaultValue>
    </stateVariable>	

	<stateVariable sendEvents="no">
      <name>Sat</name>
      <dataType>Sat</dataType>
      <defaultValue></defaultValue>
    </stateVariable>
	
	<stateVariable sendEvents="no">
      <name>Sun</name>
      <dataType>Sun</dataType>
      <defaultValue></defaultValue>
    </stateVariable>
	
	</serviceStateTable>
  
  </scpd>
